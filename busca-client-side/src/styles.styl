// ======================================================================== forms ===
input[type=text],
input[type=password],
input[type=email],
input[type=search],
input[type=number],
input[type=file],
input[type=tel],
select, textarea
	height 50px
	line-height 16px
	padding 13px 14px
	border 0
	background #fff
	box-shadow 0 0 4px rgba(0, 0, 0, 0.4)
	font_mixin($raleway, 300, 1.4em, #888)

	&:focus
		outline none

textarea
	resize none
	overflow auto
	margin-bottom 30px
	height 170px


// ======================================================================== titles ===
